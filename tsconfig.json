{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [ "vitest/globals", "@testing-library/jest-dom", "vite/client" ]
  },
  "include": [ "src" ],
  "references": [ { "path": "./tsconfig.node.json" } ]
}
